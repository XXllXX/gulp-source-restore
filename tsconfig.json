{
  "compilerOptions": {
    "outDir": "./",
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "target": "es2020",
    "lib": [
      "es2015",
      "es6",
      "dom",
      "scripthost",
      "es5",
      "es2015.promise",
      "es2015.core"
    ]
  },
  "include": ["src/**/*.*"],
  "exclude": ["node_modules", "test/*.ts"]
}
